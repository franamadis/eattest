<h1 class='text-center'><%= @product.name %></h1>
<h2 class='text-center'><small><%= @product.upc %></small></h2>
<br/>
<h2 class='text-center'><small><%= @product.nutrition %></small></h2>
<h2 class='text-center'><small><%= @product.ingredients %></small></h2>
<%= content_tag :p do %>
  <%= image_tag @product.image_url, class: 'img-responsive', width: 640, height: 480 %>
<% end if @product.image_url.present? %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
